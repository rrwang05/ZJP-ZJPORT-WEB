.tablefill
	padding 10px 0px
	
.result-title-container
	padding-top: 5px
.result-title
	position: relative
	background-color: $tablefillTitleBg
	border: 1px solid $tablefillborder
	line-height: 32px
	padding-left: 18px
	font-size: 1.2em
	color $tablefillFontColor
	font-weight: 700
	zoom 1

.tablefill-table
	table-layout: fixed
	border: 1px solid $siteNormalBorder
	font-size: 1.2em
	margin-top -1px
	
	td
	th
		position relative
		height: 32px
		border-color: $siteNormalBorder
		border-style: solid
		border-width: 1px
		color: $tablefillFontColor
		.inp-select
		.inp-tablefill
			width 60%
			&-textarea
				width: 80%
				height 48px
				line-height 16px
				padding 3px
				margin 5px 0
		.inpt-time-apart
			width 5%
			display inline-block
			text-align center
		.inp-time-form
			width 27%
		.inp-time-to
			width 27%
		.tablefill-required-ico
			color #ff0000
			font-size 1.2em
			font-weight bold
			padding-right 5px
			vertical-align middle
		.tablefill-pr10
			padding-right 10px
				
	.cel-right
		padding-right 20px
	.cel-left 
		padding-left 10px
	.cel-display-inline
		display: inline-block
		width: 100%
		line-height: 1.2em
		text-align: right
		th &
			height: 60px
	

	
			
	th
		position inherit
		background: #f6fbff
		.tablefill-th
			background: #f6fbff
			font-weight: 400
			box-sizing: border-box
			width: 100%
			height: 100%
			text-align: right
			line-height: 32px
		

.tablefill-operation
	background: $siteNormanBackground
	// height: 45px
	padding: 10px 0
	text-align: center

		
.tablefill-controller
	padding 3px 0
.controller-tip
	position absolute
	left 62%
	top 3px
	font-size 1.0em
	width: 140px
	.tip-txt
		display: block
		height: 18px
		padding 0 7px
		line-height @height
	.hint
		padding-top: 2px
		padding-bottom: 2px
		border: 1px solid #dedede
		background: #f7f7f7
		.tip-txt
			color #585858
	.error
		position: relative
		padding-top: 2px
		padding-bottom: 2px
		border: 1px solid #ffb398
		background: #ffebe0 url(../images/vld/cuo.png) no-repeat 8px 2px
		*zoom 1
		/.ico-cuo
			position: absolute
			left 7px
			top 7px
			// margin-top: -($ico_sprite_cuo[5]/2)
			// sprite($ico_sprite_cuo)
			vertical-align: middle
		.tip-txt
			padding-left 30px
			color #e60012
	.success
		padding-left 7px
		padding-top: 3px
		/.ico-dui
			display: inline-block
			width: 17px
			height: 17px
			background: url(../images/vld/dui.png) no-repeat 0 0
			// sprite($ico_sprite_dui)
			vertical-align: middle
	