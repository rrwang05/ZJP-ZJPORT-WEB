.hint
	text-align: center
	background-color: #fff
	/.hint-cont
		display: inline-block		
		height: 30px
		line-height: @height
		padding-left: 30px
		font-size: 14px
		background-repeat: no-repeat
		background-position: 0 50%
		/.hint-friendly &
				color #2fa2c7
				background: url(../images/common/hint-friendly-ico.png) 0 50% no-repeat
	/&-result
		height: 400px
		position: relative
		&-content
			position: absolute
			left: 50%
			top: 50%
			margin-left: -191px
			margin-top: -77px
			width: 382px
			height: 154px
			box-sizing: border-box
			padding: 70px 0 0 78px
			&-loading
				background: url(../images/hint/loading_p24.png) no-repeat
				background-size: 100% 100%
			&-none
				background: url(../images/hint/no-result_p24.png) no-repeat
				background-size: 100% 100%
			&-inp
				background: url(../images/hint/no-result_p24.png) no-repeat
				background-size: 100% 100%
			span
				color: $hintFontColor 
				font-size: 14px
		

	/&-error-page
		font-size: 14px
		height: 580px
		position: relative
		&-content
			position: absolute
			left: 50%
			top: 50%
			margin-left: -300px
			margin-top: -188px 
			height: 337px
			width: 600px
			&-404
				background: url(../images/hint/inner-404.png) no-repeat
				background-size 50% 86%
			&-500
				background: url(../images/hint/inner-500.png) no-repeat
				background-size 50% 86%
		&-txt-box
			padding-left: 240px
		&-t
			padding-top: 70px
			color: $hintFontColor
			font-size: 18px
			line-height: 26px
			font-weight: bold
		dl
			dt
				line-height: 30px
			dd
				display:list-item;
				list-style-type: disc
				line-height: 24px
				span 
					color: #f14703
				a
					text-decoration: underline			
		
			
