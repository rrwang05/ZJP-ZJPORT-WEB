// =====================================================
// ---  可配置样式组件 --- 对话框样式
// =====================================================
$zIndexModalCover = 1000

.modal-cover
  width: 100%
  height: 100%
  background: #999
  position: fixed
  left 0
  top 0
  z-index: $zIndexModalCover
  opacity: .4
  filter: s('alpha(opacity=40)')
  _position:absolute


.modal
  overflow hidden
  display: none
  position: fixed
  left 50%
  top 50%
  // border: 1px solid #a3a3a3;
  z-index: $zIndexModalCover + 1
  text-align: left
  background-color: #fff
  border-top-left-radius: 3px
  border-top-right-radius: 3px
  _position:absolute

.modal_open
  display: block

.modal_alert
.modal_confirm
  // position: relative
  width: 400px
  height: 154px
  margin-left: -(@width/2)
  margin-top: -(@height/2)
  .modal-body
    padding 20px 15px 20px 15px
    font-size: 1.4em
    text-align: center
    .modal-alert-ico
      display:inline-block
      vertical-align: middle
      width: 32px
      height: 32px
      background: url(../images/dialog/modal-alert-prompt.png) no-repeat
    .modal-alert-content
      display: inline-block
      vertical-align: middle
      padding-left: 8px

  .modal-foot
    position: absolute
    left 0
    bottom -1px
    width: 100%
    height: 44px
    padding 0
    border-color: #c7e1f6
    text-align: center
    background-color: $modalBtnBarBgColor
    .btn
      padding-left 20px
      padding-right: 20px
      margin-right: 5px
      margin-top: 9px
      border: 0
      color #fff
      background: $modalBtnBgColor
      filter none
      outline-style:none 
      &:hover
        color #fff
        background: $modalBtnBgColor + 10%
      &.btn_is-hover
        color #fff
        background: $modalBtnBgColor + 10%
      &.btn_is-press
        color #fff
        background: $modalBtnBgColor + 10%
      
.modal_confirm.modal_alert_fail   
.modal_alert.modal_alert_fail
  .modal-body
    .modal-alert-ico
      background-image: url(../images/dialog/modal-alert-fail.png)
      
.modal_confirm.modal_alert_ok
.modal_alert.modal_alert_ok
  .modal-body
    .modal-alert-ico
      background-image: url(../images/dialog/modal-alert-ok.png)
      
.modal_confirm.modal_alert_confirm
.modal_alert.modal_alert_confirm
  .modal-body
    .modal-alert-ico
      background-image: url(../images/dialog/modal-alert-confirm.png)
    
