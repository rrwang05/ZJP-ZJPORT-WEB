.modal-header
  position: relative
  background-color: $gsiteColor
  h2
    margin: 0
    height: 38px
    line-height: @height
    padding-left 10px
    font-size: 1.4em
    color #fff
    font-weight: 100
  .close
    position: absolute
    right: 2px
    top: 2px
    height: 32px
    width: 32px
    line-height @height
    text-align: center
    font-size: 2.2em
    text-decoration: none
    color #fff
    &:hover
      color #ff5917
    

.modal-body
  position: relative
  
  // padding: 15px;

.modal-foot
  padding: 4px 15px 4px 0
  border-top: 1px solid $resultborder
  background-color: #f1f1f1
  text-align: right
  .btn
    border 0
    margin-left: 4px
    background-image none
    border-radius 3px
    &:active
      border 0
      text-decoration none
