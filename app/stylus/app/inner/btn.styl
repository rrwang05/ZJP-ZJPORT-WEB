.btn
	// float: left
	display inline-block
	padding-left: 12px
	padding-right: 12px
	// margin 0 5px
	height: 26px
	line-height @height
	// background: linear-gradient(#f5f5f5, #ffffff)
	$mx_gradient_vertical(#fffffe, #f5f5f5)
	border: 1px solid #c8c8c8
	text-align: center
	font-size: 12px
	color #373737
	vertical-align: top
	&:hover
		color @color
		text-decoration: none
	&:focus
		$mx_gradient_vertical(#f5f5f5, #fffffe)
	//查询按钮样式
	/&-search
		background-color $searchBtnBg
		background-image: none
		filter: initial
		padding-left 16px
		padding-right: 16px
		border 0
		border-radius 3px
		color #fff
		margin: 0 5px
		&:hover
			color #fff
			background $searchBtnProcessing
		&:focus
			color #fff
			background $searchBtnProcessing
		&.btn_is-press
			color #fff
			background $searchBtnProcessing
		&.btn_is-hover
			color #fff
			background $searchBtnProcessing
	/&-search-more
		position: relative
		padding-right 22px
		i
			position: absolute
			top 7px
			right 8px
			width: 12px
			height: 12px
			background: url(../images/inner/search-more-arrow.png) no-repeat 0 0
		/&__is-open
			i
				background-position: 0 -12px
	/&-result
		height: 31px
		margin-left: -1px
		// border-width: 1px
		border-color: $resultborder
		border-width: 0 1px
		line-height @height
		color #055fa6
		background: none
		filter none
		&:hover
			color @color - 15%
			background: #cee8ff
			border-color: @border-color
		/&-ico
			margin-right: 3px
			color $resultOperationsIcoColor
			font-size: 1.3em
			font-weight: 100
			*vertical-align: middle
			vertical-align: baseline
		/&-digitIco
			background url('../images/inner/digit.png') no-repeat 0 0
			width 17px
			height 21px
			font-size 0
			vertical-align middle
			display inline-block
			
		/&-ico-distract
			height 16px
			background url('../images/result/btn-result-ico.png') no-repeat 0 0
		/&-ico-checkOk
			background url('../images/result/btn-result-ico.png') no-repeat -21px 0

		/&-ico-checkFail
			background url('../images/result/btn-result-ico.png') no-repeat -40px 0
		/&-sprites
			span
				display inline-block
				padding-top 2px
				
	/&-tablefill
		background-color $tablefillOperationBtnBg
		background-image: none
		filter: initial
		width: 80px
		height: 30px
		line-height: 30px
		border 0
		color #fff
		margin-right 10px
		border-radius 3px
		&:hover
			color #fff
			background $tablefillOperationBtnBg + 10%
		&:focus
			color #fff
			background $tablefillOperationBtnBg + 10%
		&.btn_is-press
			color #fff
			background $tablefillOperationBtnBg + 10%
		&.btn_is-hover
			color #fff
			background $tablefillOperationBtnBg + 10%
	
	/&-upload
		&:hover
			color #fff
			background $fileUploadBtnBg + 10%
		&:focus
			color #fff
			background $fileUploadBtnBg + 10%
		&.btn_is-press
			color #fff
			background $fileUploadBtnBg + 10%
		&.btn_is-hover
			color #fff
			background $fileUploadBtnBg + 10%
		




	/&-tree-form
		height: 30px
		padding 0 20px
		border: 0
		line-height @height
		background: #0b87e9
		filter none
		color #fff
		&:hover
			color @color


