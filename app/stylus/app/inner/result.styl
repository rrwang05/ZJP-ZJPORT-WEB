.result
	padding 10px 0px
	// margin 10px 8px




.result-title-container
	padding-top: 5px
.result-title
	position: relative
	background-color: $resultTitleBg
	border: 1px solid $resultborder
	line-height: 32px
	padding-left: 18px
	font-size: 1.2em
	color $resultFontColor
	font-weight: 700
	zoom 1
	&.result-tab
		position: relative
		padding-left: 1px
		overflow:hidden
		background-color: #fff
		border: 0
		margin-bottom 5px
		.result-tab-item
			float: left
			padding: 0 17px
			border-width: 1px 1px 0
			border-style: solid
			border-color: $resultborder
			margin-left: -1px
			line-height: 32px
			text-align: center
			color $resultFontColor
			text-decoration: none
			background-color: $resultTitleBg
			border-bottom:0
			z-index: 2
			// &:hover
			// 	margin-top: -1px
			// 	border-top: 2px solid $resultTabItemActiveFont
			// 	color $resultTabItemActiveFont
			// 	background $resultTabItemActiveBg
			// 	border-bottom: 1px solid $resultTabItemActiveBg
			// &:focus
			// 	margin-top: -1px
			// 	border-top: 2px solid $resultTabItemActiveFont
			// 	color $resultTabItemActiveFont
			// 	background $resultTabItemActiveBg
			// 	border-bottom: 1px solid $resultTabItemActiveBg
			&.tb-item__active
				position: relative
				z-index: 3
				margin-top:-1px
				border-top: 2px solid $resultTabItemActiveFont
				color $resultTabItemActiveFont
				background $resultTabItemActiveBg	
		.result-tab-border-bottom
			position: absolute
			left: 0
			top: 32px
			height: 1px
			width:100%
			background: $resultborder
			z-index: 2
	/.fold
		position: absolute
		right 4px
		top 50%
		width: 31px
		height: 28px
		margin-top: -(@height/2)
		background: url(../images/common/fold.png) no-repeat 0 0
		cursor: pointer
		/.result-foldable-off &
			background-position: 0 100%
	
	/.result-title-text-right
		float: right
		margin-right: 8px
		color #1b1b1b
		font-weight 100
.result-list
.result-content
	margin-top: -1px
.result-table

	table-layout: fixed
	border: 1px solid $siteNormalBorder
	font-size: 1.2em
	/.col-checkbox
		width: 48px
	tbody
		tr
			cursor: pointer
		/.tr__is-hover
			background-color: $resultActiveTrBg
			cursor: pointer
		
		/.tr__is-modify
		/.tr__is-latest
			background-color: #fff4ef	
		/.tr__is-active
			background-color: $resultActiveTrBg
		
		.tr__is-page
			cursor default
	

	td
	th
		height: 32px
		border-color: $siteNormalBorder
		border-style: solid
		border-width: 1px
	th
		background-color: $siteNormanBackground
		border 0
		
	/.cel-center
		text-align: center
	
	/.cel-left
		text-align: left
		padding-left 6px
	/.cel-right
		text-align: right
		padding-right 6px
	/.cel-oper
		a
			margin-left: 3px
			margin-right: 3px
			color $resultTableA
			&:hover
				color $resultTableA
	/.cel-longtxt
		padding-left 5px
		padding-right: 5px
		span
			display: block
			width: 100%
			height: 18px
			line-height @height
			$mx_text_ellipsis()
			// overflow: hidden


.result-page
	padding-right: 10px
	text-align: right

.result-empty-content
	min-height: 380px
	background: #fff url(../images/inner/empty.jpg) no-repeat 50% 50%

.result-loading-content
	min-height: 200px
	background: #fff url(../images/inner/loading.gif) no-repeat 50% 50%

    
.result-operations
	// height: 33px
	border: 1px solid $resultborder
	
	background-color: $resultOperationsBg
	// background: url(../images/inner/oper-bg.png) repeat-x 0 0


//多标题列表切换样式
.result-list.result-tab-content
	margin-top: -1px
	.result-tab-C
		display: none
		&.tc-item__active
			display: block
			

.result-page
	width: 100%
	padding: 10px 0px 0px 0px 
	box-sizing: border-box
	