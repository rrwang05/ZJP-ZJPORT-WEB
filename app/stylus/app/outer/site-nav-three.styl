.siteNavThree-container
	background: $siteNavThreeBg
	width: 100%
	height: 40px
	padding-left: 22px
	box-sizing: border-box
	a
		width: 80px;
		padding: 0 10px
		height: 40px
		line-height: 40px
		text-align: center
		font-size: 14px
		display: inline-block
		color: $siteNavThreeFontColor
		text-decoration: none
		&:hover
			background: $siteNavThreeBgActive
		&.siteNavThree-active
			background: $siteNavThreeBgActive